find . -type f -name '*.make' -exec sed -i 's/\-fPIC/\-fpic/g' {} \;
find . -type f -name 'flags.make' -exec sed -i 's/\-fPIC/\-fpic/g' {} \;
find . -type f -name 'Makefile*' -exec sed -i 's/\-fPIC/\-fpic/g' {} \;